{
  "name": "mixin-node-client",
  "description": "Node.js SDK for Mixin Network",
  "version": "0.2.3",
  "author": "wangshijun <wangshijun2010@gmail.com>",
  "bugs": {
    "url": "https://github.com/wangshijun/mixin-node-client/issues",
    "email": "wangshijun2010@gmail.com"
  },
  "contributors": [
    "wangshijun <wangshijun2010@gmail.com>"
  ],
  "dependencies": {
    "axios": "^0.18.0",
    "camelcase": "^5.0.0",
    "camelcase-keys": "^5.0.0",
    "int64-buffer": "^0.1.10",
    "interval-promise": "^1.3.0",
    "jsonwebtoken": "^8.3.0",
    "rfc3339nano": "^1.0.2",
    "strformat": "^0.0.7",
    "ws": "^6.1.2"
  },
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "devDependencies": {
    "auto-bind": "^1.1.0",
    "ava": "^0.22.0",
    "cross-env": "^5.0.5",
    "debug": "^3.1.0",
    "eslint": "^4.5.0",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.4",
    "nyc": "^11.1.0",
    "prettier": "^1.6.1",
    "xo": "latest"
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "https://github.com/wangshijun/mixin-node-client",
  "keywords": [
    "mixin",
    "blockchain",
    "lass",
    "node.js",
    "crypto"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": [
      "prettier",
      "git add"
    ]
  },
  "main": "lib/index.js",
  "nyc": {
    "check-coverage": true,
    "lines": 5,
    "functions": 1,
    "branches": 4,
    "reporter": [
      "lcov",
      "html",
      "text"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wangshijun/mixin-node-client"
  },
  "xo": {
    "extends": "prettier",
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "unicorn/number-literal-case": "off",
      "prettier/prettier": [
        "error",
        {
          "printWidth": 120,
          "tabWidth": 2,
          "trailingComma": "es5",
          "jsxBracketSameLine": true,
          "semi": true,
          "singleQuote": true,
          "bracketSpacing": true
        }
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "ignoreUrls": true
        }
      ],
      "valid-jsdoc": "off",
      "unicorn/prefer-add-event-listener": "off",
      "promise/prefer-await-to-then": "off",
      "capitalized-comments": "off",
      "camelcase": "off",
      "unicorn/import-index": "off",
      "import/newline-after-import": "off",
      "no-warning-comments": "off"
    },
    "space": true
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov",
    "lint": "xo",
    "precommit": "lint-staged && npm run test",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  }
}
